# Google Calendar OAuth
# For local: download credentials.json from Google Cloud Console
INTERNAL_TEAM_UTIL_GOOGLE_CREDENTIALS_PATH=credentials/credentials.json
INTERNAL_TEAM_UTIL_GOOGLE_TOKEN_PATH=credentials/token.json
INTERNAL_TEAM_UTIL_GOOGLE_CALENDAR_ID=primary

# For Azure (headless): paste the full token.json content here.
# Generate locally first with `make auth`, then `make print-token` to get the value.
# INTERNAL_TEAM_UTIL_GOOGLE_TOKEN_JSON={"token": "...", "refresh_token": "...", ...}

# Slack Bot (create at api.slack.com/apps)
INTERNAL_TEAM_UTIL_SLACK_BOT_TOKEN=xoxb-your-bot-token
INTERNAL_TEAM_UTIL_SLACK_APP_TOKEN=xapp-your-app-level-token
INTERNAL_TEAM_UTIL_SLACK_USER_ID=U01ABCDEF

# Behavior
INTERNAL_TEAM_UTIL_PING_LEAD_TIME_MINUTES=5
INTERNAL_TEAM_UTIL_PING_INTERVAL_SECONDS=60
INTERNAL_TEAM_UTIL_POLL_INTERVAL_SECONDS=30
INTERNAL_TEAM_UTIL_LOOKAHEAD_MINUTES=15
INTERNAL_TEAM_UTIL_CONFIRMATION_PHRASE=ok

# Azure deploy (not prefixed -- these are for the deploy script, not the app)
# AZURE_RESOURCE_GROUP=meeting-pinger-rg
# AZURE_LOCATION=eastus
# AZURE_REGISTRY_NAME=meetingpingercr
